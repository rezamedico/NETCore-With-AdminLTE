@inject pas.Interfaces.IPasSession _session

<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/images/userdefault.png" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@_session.FullName</p>
                <a href="#"><i class="fa fa-circle text-success"></i> @_session.RoleName</a>
            </div>
        </div>

        <!--Menu-->        
        <ul class="sidebar-menu">
            <li class="header">MAIN NAVIGATION</li>

            <li>
                <a href="#">
                    <i class="fa fa-tachometer"></i> <span>DASHBOARD</span>
                </a>
            </li>

            <li class="treeview">
                <a href="#">
                    <i class="glyphicon glyphicon-transfer"></i>
                    <span>Transaksi</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li>
                        <a href="/#/">
                            <i class="fa fa-circle-o"></i> <span>Penjualan</span>
                        </a>
                    </li>
                    <li>
                        <a href="/#/">
                            <i class="fa fa-circle-o"></i> <span>Pembelian</span>
                        </a>
                    </li>
                </ul>
            </li>

        </ul>

        
    </section>
    <!-- /.sidebar -->
</aside>