@using pas.ViewModels
@model LoginViewModel
@{ 
    Layout = "_LayoutLogin";
}

<!-- Content
============================================= -->
<section id="content">

    <div class="content-wrap nopadding">

        <div class="section nopadding nomargin" style="width: 100%; height: 100%; position: absolute; left: 0; top: 0; background-size: cover;"></div>

        <div class="section nobg full-screen nopadding nomargin">
            <div class="container vertical-middle divcenter clearfix">

                <div class="panel panel-default divcenter noradius noborder" height="300" style="max-width: 350px; background-color: rgba(255,255,255,0.93);">
                    <div class="panel-body" style="padding: 40px;">

                        <div class="row center">
                            <a href="#"><img src="~/images/agenda_icon.png" alt="Canvas Logo" height="100" align="top"></a>
                        </div>
                        <form asp-controller="Login"
                              asp-action="Login"
                              class="nobottommargin"
                              method="post"
                              role="form"
                              autocomplete="off">
                            <div class="col_full">
                                <label asp-for="Username"></label>
                                <input asp-for="Username" type="text" id="login-form-username" class="form-control not-dark" />
                            </div>
                            <div class="col_full">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" type="password" id="login-form-password" autocomplete="off" class="form-control not-dark" />
                            </div>
                            <div class="col_full nobottommargin">
                                <button class="button button-3d button-black nomargin" id="login-form-submit" type="submit">Login</button>
                            </div>
                            <div asp-validation-summary="All" class="text-danger col-sm-offset-2 col-md-offset-2"></div>
                        </form>
                    </div>
                </div>

                <div class="row center dark"><small style="color:black;">Copyrights &copy; @DateTime.Now.Year PAS</small></div>

            </div>
        </div>

    </div>

</section>
<!-- #content end -->
<!-- Go To Top
============================================= -->
<div id="gotoTop" class="icon-angle-up"></div>